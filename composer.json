{
    "name": "chemaclass/php-scaffolding",
    "description": "A basic PHP scaffolding with Docker",
    "type": "library",
    "homepage": "https://github.com/Chemaclass/php-scaffolding",
    "license": "MIT",
    "keywords": [
        "php",
        "scaffolding",
        "docker"
    ],
    "authors": [
        {
            "name": "Jose Maria Valera Reales",
            "email": "chemaclass@outlook.es",
            "homepage": "http://chemaclass.es/"
        }
    ],
    "require": {
        "ext-json": "*",
        "php": "^7.4"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^2.15",
        "symfony/var-dumper": "^5.0.4",
        "phpunit/phpunit": "^9",
        "infection/infection": "^0.15.3",
        "vimeo/psalm": "^3.12"
    },
    "autoload": {
        "psr-4": {
            "Domain\\": "src/Domain"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "DomainTests\\": "tests/DomainTests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "csfix": "vendor/bin/php-cs-fixer fix",
        "psalm": "vendor/bin/psalm"
    }
}
